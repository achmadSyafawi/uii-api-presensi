{
  "parser": "babel-eslint",
  "extends": ["prettier", "airbnb"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "indent": ["error", 4],
    "max-len": "off",
    "global-require": "off",
    "no-confusing-arrow": "error",
    "no-mixed-operators": "error",
    "no-tabs": "error"
  }
}
